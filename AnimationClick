private void SetBackgroundDung(TextView tv){

        Drawable backgrounds[] = new Drawable[2];
        backgrounds[0] = getDrawable(R.drawable.item_cauhoi);
        backgrounds[1] = getDrawable(R.drawable.item_cauhoi2);
        TransitionDrawable crossfader = new TransitionDrawable(backgrounds);
        tv.setBackground(crossfader);
        crossfader.startTransition(500);

//        ColorDrawable[] color = {new ColorDrawable(getResources().getColor(R.color.xam)),
//                new ColorDrawable(Color.GREEN)};
//        TransitionDrawable trans = new TransitionDrawable(color);
//        tv.setBackground(trans);
//        trans.startTransition(500);
    }
    
